<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Avatar centrado -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_perfil"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nina Salas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Matrícula -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_light"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_badge"
                android:contentDescription="@string/cd_matricula"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tvMatriculaPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Carrera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_light"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_school"
                android:contentDescription="@string/cd_carrera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrera:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tvCarreraPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingeniería en Computación"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Promedio general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_light"
            android:padding="12dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:contentDescription="@string/cd_promedio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promedio:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tvPromedioPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.45"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Código de barras -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivBarcode"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:contentDescription="@string/cd_barcode"
                android:src="@drawable/barcode_placeholder"/>

            <TextView
                android:id="@+id/tvBarcodeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
