<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título superior -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSIDAD DEL PAPALOAPAN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E2E2E"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Logo de UNPA -->
        <ImageView
            android:id="@+id/logo_universidad"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/he_logo_unpa"
            android:contentDescription="Logo de la Universidad del Papaloapan"
            android:layout_marginBottom="16dp" />

        <!-- Card blanca redondeada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_margin="16dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a UNPA Scholar"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/txtMatricula"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Matricula"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Iniciar sesión"
                android:background="@drawable/bg_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/btnRecuperar_contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#5D5D5D"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true" />
        </LinearLayout>

        <!-- Botón para crear cuenta -->
        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Crear Una Cuenta"
            android:background="@drawable/bg_button_alt"
            android:textColor="#2E7D32"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp" />

        <!-- Botón de Google (con error corregido) -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Inicia Sesión con Google"
            android:background="@drawable/bg_button_google"
            android:textColor="#000000"
            android:layout_margin="16dp" />

    </LinearLayout>
</ScrollView>
